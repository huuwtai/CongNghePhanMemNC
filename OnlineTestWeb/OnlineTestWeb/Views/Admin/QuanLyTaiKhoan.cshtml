
@{
    ViewBag.Title = "QuanLyTaiKhoan";
    Layout = "~/Views/Shared/_Layout.cshtml";
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">
}
@model IEnumerable<OnlineTestWeb.Models.Tài_Khoản>
<div>
    <h2 style="color:blue; text-align:center; margin:15px 0;">Quản lý tài khoản</h2>
    <button type="button" class="btn btn-primary" onclick="location.href='@Url.Action("CreateAccount", "Admin")' ""><i class="bi bi-plus"></i>Tạo mới  </button>
</div>
<hr />
<table class="table">
    <thead>
        <tr>
            <th>Mã Tài Khoản</th>
            <th>Tên Đăng Nhập</th>
            <th>Mật Khẩu</th>
            <th>Phân Quyền</th>
            <th>Lớp</th>
            <th>Sửa</th>
            <th>Xoá</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.MaTaiKhoan)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TenDN)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MatKhau)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Phân_Quyền.TenPhanQuyen)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Lớp.MaLop)
                </td>
                <td>
                    @Html.ActionLink("Sửa", "Edit", new { id = item.MaTaiKhoan })
                </td>
                <td>
                    @Html.ActionLink("Xoá", "Delete", new { id = item.MaTaiKhoan })
                </td>
            </tr>
        }
    </tbody>
</table>
